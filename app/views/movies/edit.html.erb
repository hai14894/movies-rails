<form action="/movies/<%= @movie.id %>" method="PUT">
    <input type="hidden" value="<%= form_authenticity_token %>" name="authenticity_token" />

    title: <input placeholder="title" type="text" name="title" value="<%= @movie.title%>" />
    <br>
    duration: <input placeholder="duration" type="number" name="duration" value="<%= @movie.duration%>"/>
    <br>
    <button type="submit">Submit</button>
</form>